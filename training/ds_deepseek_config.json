{
    "train_batch_size": 256,
    "gradient_accumulation_steps": 32,
    "bf16": {"enabled": true},
    "optimizer": {
        "type": "AdamW",
        "params": {
            "lr": 5e-5,
            "weight_decay": 0.01
        }
    },
    "scheduler": {
        "type": "WarmupDecayLR",
        "params": {
            "warmup_min_lr": 0,
            "warmup_max_lr": 5e-5,
            "total_num_steps": 8e6
        }
    },
    "tensorboard": {
        "enabled": true,
        "job_name": "comb_training"
    },
    "tensor_parallel": {
        "autotp_size": 4,
        "tensor_parallel": {
            "tp_size": 4
        }
    },
    "ckpt_folder": null,
    "zero_optimization": {
        "stage": 2,
        "offload_optimizer": {
            "device": "cpu",
            "pin_memory": true
        },
        "overlap_comm": true,
        "gather_16bit_weights_on_model_save": true
    }
}
